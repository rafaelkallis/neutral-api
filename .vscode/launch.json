{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch in production mode",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start"
            ],
            "env": {"NODE_ENV":"production"},
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
			"presentation": {
                "hidden": true,
                // PROD requires all the ENV variables
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch in development mode",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev-debug"
            ],
            "env": {"NODE_ENV":"development"},
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
			"presentation": {
				"hidden": false,
            },
            "protocol": "inspector",
            "console": "integratedTerminal",
            //"internalConsoleOptions": "neverOpen"
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}