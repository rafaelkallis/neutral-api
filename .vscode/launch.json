{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch in development mode",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev:debug"
            ],
            "env": {"NODE_ENV":"development"},
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "presentation": {
                "hidden": false,
            },
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
