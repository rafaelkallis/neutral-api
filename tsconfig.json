{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["es2019"],
    "sourceMap": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
