{% extends "_base.njk" %}

{% block title %}
  Peer Review Requested
{% endblock %}

{% block preview %}
  Your peer-review is needed.
{% endblock %}

{% block content %}
<mj-section>
  <mj-column>
    <mj-text>Hi {{ firstName or "there" }},</mj-text>
    {% block ctaContent %}{% endblock %}
    <mj-spacer />
    <mj-button mj-class="primary-button" href="{{ ctaUrl }}">{{ ctaLabel }}</mj-button>
    <mj-text mj-class="alt-text">Link not working? Try this: <a href="{{ ctaUrl }}">{{ ctaUrl }}</a></mj-text>
    <mj-spacer />
    <mj-text>- Team Covee</mj-text>
  </mj-column>
</mj-section>
{% endblock %}
