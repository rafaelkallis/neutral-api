{% extends "_base.njk" %}

{% block title %}
  Peer Review Requested
{% endblock %}

{% block preview %}
  Your peer-review is needed.
{% endblock %}

{% set nameToken %}
  {% if firstName %} 
    {{ firstName }}
  {% else %}
    there
  {% endif %}
{% endset %}

{% block content %}
<mj-section >
  <mj-column>
    <mj-text>Hi {{ nameToken | trim }},</mj-text>
    {% block ctaContent %}{% endblock %}
    <mj-spacer />
    <mj-button mj-class="primary-button" href="{{ ctaActionUrl }}">{{ ctaActionLabel }}</mj-button>
    <mj-text mj-class="alt-text">Link not working? Try this: <a href="{{ ctaActionUrl }}">{{ ctaActionUrl }}</a></mj-text>
    <mj-spacer />
    <mj-text>- Team Covee</mj-text>
  </mj-column>
</mj-section>
{% endblock %}
