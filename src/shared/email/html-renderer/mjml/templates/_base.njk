<mjml>
  <mj-head>
    <mj-title>{{ title }}</mj-title>
    <mj-preview>{{ preview }}</mj-preview>
    <mj-font name="Rubik" href="https://fonts.googleapis.com/css2?family=Rubik" />
    <mj-attributes>
      <mj-all font-family="Rubik, sans-serif" />
      <mj-text font-size="17px" />
      <mj-class name="primary-button" background-color="#411B4E" font-size="20px" />
      <mj-class name="footer-text" align="center" font-size="13px" color="#989EA6" />
      <mj-class name="alt-text" align="center" font-size="12px" color="#AAAAAA" />
    </mj-attributes>
  </mj-head>
  <mj-body background-color="#F9F9F9">
    <mj-section padding-bottom="8px">
      <mj-column>
        <mj-image 
            width="120px" 
            alt="covee" 
            href="https://covee.network"
            src="https://coveesaasapi1.blob.core.windows.net/public/covee-logo-dark-small.png">
        </mj-image>
      </mj-column>
    </mj-section>
    <mj-wrapper border-radius="10px" background-color="white">
      {% block content %}{% endblock %}
    </mj-wrapper>
    <mj-section>
      <mj-column>
        <mj-text mj-class="footer-text"><a href="https://covee.network">Covee Network AG</a></mj-text>
        <mj-text mj-class="footer-text">Seilergraben 53, 8001 Zurich, Switzerland</mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>